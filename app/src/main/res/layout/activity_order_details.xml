<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/app_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.noni.Orderise.ShortBlack">
    <ImageView
        android:id="@+id/coffee_cup_image"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="300dp"
        android:src="@drawable/shortblack_order"/>
    <ListView
        android:id="@+id/order_list"
        android:layout_below="@id/coffee_cup_image"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/orderSubmitButtonHeight">
    </ListView>
    <LinearLayout
        android:layout_below="@+id/order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:layout_gravity="center_horizontal"
            android:background="@color/secondary_color"
            android:textColor="@color/all_text_color"
            android:id="@+id/editButton"
            android:textAllCaps="false"
            android:layout_width="@dimen/shortBlackButtonWidth"
            android:layout_height="@dimen/orderSubmitButtonHeight"
            android:text="Edit Order"/>
    </LinearLayout>
</RelativeLayout>