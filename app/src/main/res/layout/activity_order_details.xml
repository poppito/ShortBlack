<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/app_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.noni.ShortBlack.ShortBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="300dp"
            android:src="@drawable/shortblack_order"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="@dimen/order_details_text_padding"
            android:layout_height="200dp"
            android:maxLines="3"
            android:textAllCaps="true"
            android:id="@+id/coffeeOrder"/>
        <Button
            android:layout_gravity="center_horizontal"
            android:background="@color/textColor"
            android:textColor="@color/app_background"
            android:id="@+id/editButton"
            android:textAllCaps="false"
            android:layout_width="@dimen/orderSubmitButtonWidth"
            android:layout_height="@dimen/orderSubmitButtonHeight"
            android:text="Edit Order"/>
    </LinearLayout>

</ScrollView>