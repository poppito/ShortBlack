<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/shortblack_scrollview_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/app_background"
            android:focusableInTouchMode="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.noni.ShortBlack.ShortBlack">

    <LinearLayout
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_spacers">
        </LinearLayout>

        <TextView
            android:id="@+id/title_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:gravity="center"
            android:text="@string/titleString"
            android:textColor="@color/textColor"
            android:textSize="@dimen/largeTextSize">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_spacers">
        </LinearLayout>

        <Spinner
            android:id="@+id/orderSizesSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:gravity="center_horizontal">
        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_spacers">
        </LinearLayout>

        <Spinner
            android:id="@+id/milkChoicesSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:gravity="center_horizontal">
        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_spacers">
        </LinearLayout>

        <Spinner
            android:id="@+id/additiveChoicesSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:gravity="center_horizontal">
        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_spacers">
        </LinearLayout>

        <Spinner
            android:id="@+id/coffeeTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:gravity="center_horizontal">
        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/linear_layout_spacers">

            <ImageButton
                android:id="@+id/closeKeyboard"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:background="@android:color/white"
                android:visibility="gone"
                android:src="@drawable/ic_shortblack_close_keyboard"/>

            <EditText
                android:id="@+id/name"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="@dimen/textHeight"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="@string/nameString"
                android:lines="1"
                android:maxLength="15"
                android:textColor="@color/textColor"
                android:textIsSelectable="true"
                android:textSize="@dimen/buttonTextSize">
            </EditText>
        </LinearLayout>
        <TextView
            android:id="@+id/status_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/textColor"
            android:textSize="@dimen/mediumTextSize">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/linear_layout_spacers">

            <Button
                android:id="@+id/saveForLater"
                style="@style/shortblack_buttons"
                android:layout_width="@dimen/shortBlackButtonWidth"
                android:layout_height="@dimen/orderSubmitButtonHeight"
                android:layout_marginRight="20dp"
                android:text="@string/shortblack_add_another_order_string"/>

            <Button
                android:id="@+id/submitButton"
                style="@style/shortblack_buttons"
                android:layout_width="@dimen/shortBlackButtonWidth"
                android:layout_height="@dimen/orderSubmitButtonHeight"
                android:text="@string/orderSubmitButton"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>