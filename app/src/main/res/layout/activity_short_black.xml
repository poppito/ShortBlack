<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/app_background"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.noni.ShortBlack.ShortBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_spacers">
        </LinearLayout>

        <TextView
            android:id="@+id/title_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:gravity="center"
            android:text="@string/titleString"
            android:textColor="@color/textColor"
            android:textSize="@dimen/largeTextSize">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_spacers">
        </LinearLayout>

        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:focusable="true"
            android:hint="@string/nameString"
            android:lines="1"
            android:maxLength="15"
            android:textColor="@color/textColor"
            android:textIsSelectable="true"
            android:textSize="15sp">
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_spacers">
        </LinearLayout>

        <Spinner
            android:id="@+id/orderSizesSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal">
        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_spacers">
        </LinearLayout>

        <Spinner
            android:id="@+id/milkChoicesSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal">
        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_spacers">
        </LinearLayout>

        <Spinner
            android:id="@+id/additiveChoicesSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal">
        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_spacers">
        </LinearLayout>

        <Spinner
            android:id="@+id/coffeeTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal">
        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/linear_layout_spacers">

            <Button
                android:id="@+id/submitButton"
                android:layout_width="@dimen/orderSubmitButtonWidth"
                android:layout_height="@dimen/orderSubmitButtonHeight"
                android:layout_gravity="left"
                android:layout_marginRight="40dp"
                android:textSize="@dimen/mediumTextSize"
                android:textAllCaps="false"
                android:background="@color/textColor"
                android:text="@string/orderSubmitButton"
                android:textColor="@color/app_background">
            </Button>

            <LinearLayout
                android:layout_gravity="right"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                >

                <ImageButton
                    android:id="@+id/fab"
                    android:layout_width="@dimen/shortblack_add_another_width"
                    android:layout_height="@dimen/shortblack_add_another_height"
                    android:layout_gravity="start"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:background="@drawable/ic_shortblack_floating_action_button"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_shortblack_small"
                    />
                <TextView
                    android:textColor="@color/textColor"
                    android:layout_gravity="end"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="@string/shortblack_add_another_order_string"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/status_message"
            android:gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:text=""
            android:textColor="@color/textColor"
            android:textSize="@dimen/largeTextSize">
        </TextView>

    </LinearLayout>
</ScrollView>